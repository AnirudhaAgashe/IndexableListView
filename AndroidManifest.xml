<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woozzu.android.indexablelistview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".IndexableListViewActivity"
            android:label="@string/array_example" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.woozzu.android.indexablelistview.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.woozzu.android.indexablelistview.CursorBasedIndexableListView"
            android:label="@string/cursor_example" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.woozzu.android.indexablelistview.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.woozzu.android.indexablelistview.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>